{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Nest Debug",
        "runtimeArgs": [
            "-r",
            "ts-node/register",
            "-r",
            "tsconfig-paths/register"
            ],
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/main.ts",
        "autoAttachChildProcesses": true
      }
    ]
  }